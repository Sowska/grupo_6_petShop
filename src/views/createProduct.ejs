  <body>

    <!-- HEADER DINAMICO -->
    <%-include('partials/header') %>

      <section class="green-container">  
        <h2 class="titulo">Agregar Producto</h2>
        <div class="white-container">
          
          <form action="/products" method="POST" enctype="multipart/form-data">
            <div class="form-div">
              <div class="form-div">
                <h2 class="titulo2">Selecciona una categoria para tu producto:</h2>
                  <% for( let i=0; i<categories.length; i++) { %>
                    <input type="radio" name="categoryValue" value="<%= categories[i].id %>"><%= categories[i].name%></input>
                    <% } %>
              </div>
            </div>

            <div>
              <div class="form-div">
                <label for="name" class="form-label">Nombre del producto:</label>
                <input type="text" id="product" name="product" placeholder="Ej: Collar de cascabel" class="form-input">
              </div>
              <div class="form-div">
                <label for="description" class="form-label">Descripcion:</label>
                <input type="text" id="description" name="description" placeholder="Puede incluir detalles como altura, diametro, piezas, condiciones de uso, etc. " class="form-input">
              </div>
              <div class="form-div">
                <label for="material" class="form-label">Material:</label>
                <select name="material">
                  <% for (let i = 0; i<materials.length; i++)  { %>
                    <option value="<%= materials[i].id %>">
                        <%= materials[i].name%>
                    </option>
                    <%} %>
                </select>
              </div>
              <div class="form-div">
                <label for="size" class="form-label">Talle:</label>
                <select name="size">
                  <option value="Y">XXS</option>
                  <option value="X">XS</option>
                  <option value="S">S</option>
                  <option value="M">M</option>
                  <option value="L">L</option>
                  <option value="G">XL</option>
                </select>
              </div>
              <div class="form-div">
                <label for="measure" class="form-label">Presentación:</label>
                <select name="measure">
                  <option value="250ml">250ml</option>
                  <option value="500ml">500ml</option>
                  <option value="750ml">750ml</option>
                  <option value="1L">1L</option>
                  <option value="250grs">250grs</option>
                  <option value="500grs">500grs</option>
                  <option value="750grs">750grs</option>
                  <option value="1kg">1kg</option>
                </select>
              </div>
              <div class="form-div">
                <label for="fragrance" class="form-label">Fragancia:</label>
                <select name="fragrance">
                  <option value="Coco">Coco</option>
                  <option value="Vainilla">Vainilla</option>
                  <option value="Lavanda">Lavanda</option>
                  <option value="Chicle">Chicle</option>
                  <option value="Menta">Menta</option>
                  <option value="Neutro">Neutro</option>
                </select>
              </div>
              <div class="form-div">
                <label for="flavor" class="form-label">Sabor:</label>
                <select name="flavor">
                  <option value="Carne">Carne</option>
                  <option value="Pescado">Pescado</option>
                  <option value="Pollo">Pollo</option>
                  <option value="Mix">Mix</option>
                  <option value="Sardina">Sardina</option>
                  <option value="Salmon">Salmon</option>
                </select>
              </div>
              <div class="form-div">
                <label for="color" class="form-label">Color:</label>
                <select name="color">
                  <% for (let i = 0; i<colors.length; i++)  { %>
                    <option value="<%= colors[i].id %>">
                        <%= colors[i].name%>
                    </option>
                    <%} %>
                </select>
              </div>

              <div class="centered-row">
                <label for="pet" class="form-label">Tipo de mascota:</label>
                <select name="pet" id="pet" class="form-input">
                  <option value="">Elegí</option>
                  <option value="gato">Gato</option>
                  <option value="perro">Perro</option>
                </select>
              </div>
              <div class="centered-row">
                <label for="new-product" class="img-label">Imagen:</label>
                <input type="file" id="new-product-img" name="new-product-img" class="img-input">
              </div>
              <label for="price" class="form-label">Precio del producto:</label>
                <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
                <label for="discountValue" class="form-label">¿Tiene descuento?:</label>
                    <input type="radio" name="discountValue" value="true">Si</input>
                    <input type="radio" name="discountValue" value="false">No</input>
              <div class="form-div">
                <label for="discount" class="form-label">Porcentaje de descuento:</label>
                <select name="discount">
                  <% for (let i = 0; i<discounts.length; i++)  { %>
                    <option value="<%= discounts[i].id %>">
                        <%= discounts[i].percentage%>
                    </option>
                    <%} %>
                </select>
              </div>
              <div class="centered-row">
                <button type="submit" class="save save-button">Crear producto</button>
                <button type="reset" class="clear">Cancelar</button>
              </div>
            </div>
          </form>

        </div>
      </section>
      
