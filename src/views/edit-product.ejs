<!-- HEAD DINAMICO -->
<%-include('partials/head') %>

    <body>

        <!-- HEADER DINAMICO -->
        <%-include('partials/header') %>


            <div class="content-wrapper-edit">
                <div class="col-12">
                    <h2 class="products-title">Estás editando: <i>
                            <%= productToEdit.product%>
                        </i></h2>
                </div>

                <form action="/products/<%= productToEdit.id %>?_method=PUT" method="POST">
                    <div class="row product-detail">
                        <div>
                            <label for="name" class="form-label">Nombre del producto:</label>
                            <input type="text" id="product" name="product" placeholder="Ej: Collar de cascabel"
                                class="form-input" value="<%= productToEdit.product %>">
                        </div>
                        <div>
                            <label for="price" class="form-label">Precio del producto:</label>
                            <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input"
                                value="<%= productToEdit.price %>">
                        </div>
                        <div>
                            <label for="material" class="form-label">Material:</label>
                            <input type="text" id="material" name="material" placeholder="Ej: algodón"
                                class="form-input" value="<%= productToEdit.material %>">
                        </div>
                        <div>
                            <label for="size" class="form-label">Tamaño:</label>
                            <input type="text" id="size" name="size" placeholder="Ej: M" class="form-input"
                                value="<%= productToEdit.size %>">
                        </div>

                        <div class="centered-row">
                            <label for="category" class="form-label">Categoría:</label>
                            <select name="pet" id="pet" class="form-input">
                                <option value="">Elegí</option>
                                <option value="gato" <%=productToEdit.pet==='gato' && 'selected' %>>Gato</option>
                                <option value="perro" <%=productToEdit.pet==='perro' && 'selected' %>>Perro</option>
                            </select>
                        </div>
                        <div class="centered-row">
                            <label for="image" class="img-label">Imagen:</label>
                            <input type="file" id="image" name="image" class="img-input">
                        </div>
                        <div class="centered-row">
                            <button type="submit" class="save-button">Guardar producto</button>
                        </div>
                    </div>
                </form>

            </div>

            <%-include('partials/footer') %>

    </body>

    </html>