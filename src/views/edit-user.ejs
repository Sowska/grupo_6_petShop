<body>
    <%-include('partials/header') %>
<main>
    <div class="user-wrapper-edit">
        <div class="col-12">
            <h2 class="products-title">Est치s editando: <i>
                    <%= userToEdit.firstName%> <%= userToEdit.lastName%>
                </i></h2>
        </div>

        <form action="/user/<%= userToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="row product-detail">
                <div>
                    <label for="firstName" class="form-label">Nombre:</label>
                    <input type="text" id="firstName" name="firstName" placeholder="Ej: Jane"
                        class="form-input" value="<%= userToEdit.firstName %>">
                </div>
                <div>
                    <label for="lastName" class="form-label">Apellido:</label>
                    <input type="text" id="lastName" name="lastName" placeholder="Ej: Doe" class="form-input"
                        value="<%= userToEdit.lastName %>">
                </div>
                <div>
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" placeholder="Ej: algod칩n"
                        class="form-input" value="<%= userToEdit.email %>">
                </div>
                <div>
                    <label for="password" class="form-label">Nueva contrase침a:</label>
                    <input type="password" id="password" name="password" placeholder="Debe tener al menos 6 caracteres" class="form-input">
                </div>

                <div class="centered-row">
                    <label for="category" class="form-label">Este usuario es administrador:</label>
                    <input type="radio" id="adminValue" name="adminValue" value="true" <%= userToEdit.admin ? "checked" : "" %> >Si</input>
                    <input type="radio" name="adminValue" value="false" <%= userToEdit.admin ? "" : "checked" %>>No</input>
                </div>
                <div class="centered-row">
                    <label for="image" class="new-avatar">Imagen:</label>
                    <input type="file" id="new-avatar" name="new-avatar" class="img-input">
                </div>
                <div class="centered-row">
                    <button type="submit" class="save-button">Guardar informaci칩n</button>
                </div>
            </div>
        </form>

    </div>

</main>
<%-include('partials/footer') %>
</body>

</html>