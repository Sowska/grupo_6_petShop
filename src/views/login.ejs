<!-- HEADER DINAMICO -->

<body>
        <%-include('partials/header') %>


    <main>

        <main class="container">
            <section class="container-form">
                <div class="form-card">
                    <h2 class="form-card-title">Mi Cuenta</h2>

                    <div class="form-card-container">
                        <form action= "/user/processLogin" method= "POST" class="inicio-secion-form">
                            <div class="form-control">

                                <h4 for="titulo-mail">Dirección de correo electronico</h4>
                                <input type="email" name="email" id="email" value="<%= locals.oldData && oldData.email ? oldData.email : null %>" required>
                            </div>
                                <% if (locals.errors && errors.email) { %>
                                <div class="text-danger">
                                    <% errors.email.msg %>
                                </div>
                                <%  }  %>
                            <br>
                            <div class="form-control">
                                <h4 for="titulo-contraseña">Contraseña</h4>
                                <input type="password" name="password" id="password" required>
                                <% if (locals.errors && errors.password) { %>
                                    <div class="text-danger">
                                        <% errors.password.msg %>
                                    </div>
                                    <%  }  %>
                            </div>

                            <div>
                                <h5 class="contraseña"><a href="olvidaste-contraseña"> ¿Olvidaste tu contraseña? </a>
                                </h5>
                            </div>
                            <br>

                            <div class="ingresar">
                                <button class="ingresar" type="submit" value="Login">
                                    Acceder
                                </button>
                            </div>
                            <br>

                            <br>
                            <div class="recordar-mi"><input class="checkbox" type="checkbox" name="recordame">
                                <h5 class="recordar-cuenta"> Recordar mi cuenta</h5>
                            </div>
                            <br>


                            <hr>
                            <br>


                            <div class="logos-juntos">
                                <div class="logo">
                                    <a href="logo-gmail"><img src="/images/gmail-icon.png"
                                            alt="logo-gmail"></a>
                                    <label class="ingreso-mail" for="ingreso-gmail"> &nbsp; Continuar con Gmail</label>
                                </div>

                                <div class="logo">
                                    <a href="logo-face"><img src="/images/facebook-icon.png" alt="logo-face"></a>
                                    <label class="ingreso-face" for="ingreso-face"> &nbsp; Continuar con
                                        Facebook</label>
                                </div>
                            </div>

                            <br>

                            <div>
                                <h5><a href="./register"> ¿No tenes cuenta? Registrate aquí! </a></h5>
                            </div>
                            <br>
        </main>
        <br>
        <br>

        <%-include('partials/footer') %>


</body>

</html>