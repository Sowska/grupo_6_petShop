<%-include('partials/head') %>
    <!-- HEADER DINAMICO -->

    <body>
        <%-include('partials/header') %>

            <div class="content-wrapper">

                <figure>
                    <img src="/images/<%= product.image %>" alt="product image" class="product-detail-img">
                </figure>

                <div>

                    <h2 class="product-title">
                        <%= product.product %>
                    </h2>
                    <div class="detail-row">
                        <div>Material:</div>
                        <div>
                            <%=product.material %>
                        </div>
                    </div>

                    <div class="detail-row">
                        <div>Tama√±o:</div>
                        <div>
                            <%=product.size %>
                        </div>
                    </div>

                    <div class="detail-row2">
                        <button class="add add-detail"> Agregar al carrito </button>
                        <div class="counter">
                            <span class="down" onClick='decreaseCount(event, this)'>-</span>
                            <input type="text" value="1">
                            <span class="up" onClick='increaseCount(event, this)'>+</span>
                        </div>

                    </div>

                    <div class="detail-row2">
                        <a href="#" class="action-button edit">EDITAR PRODUCTO</a>
                        <form action="#" method="POST" style="display: inline-flex">
                            <button type="submit" class="action-button delete">ELIMINAR</button>
                        </form>
                    </div>


                </div>

            </div>

            <%-include('partials/footer') %>
    </body>

    </html>
