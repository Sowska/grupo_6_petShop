<%-include('partials/head') %>

    <body>
        <%-include('partials/header') %>
        <div class="title-div">
            <h2 class="products-title">Nuestro cat√°logo de productos</h2>
            <% if (locals.isLogged) { %>
                <a href="/products/create"><i class="fa fa-plus"></i>  Crear producto</a>
            <% } %>
        </div>
            <div class="products-wrapper">

                        <% products.forEach((product)=> { %>
                            <div class="product-container">
                                <div class="box">
                                    <div class="card">
                                        <span class="card_infoicon">
                                            <i class="fa fa-info"></i>
                                        </span>
                                        <div class="info-container">
                                            <a href="/products/<%= product.id%>" class="link-prod"> Ver producto...</a>
                                        </div>
                                    </div>
                                    <h4 class="pet-type"><%= product.pet %></h4>

                                    <figure class="product-box_image">
                                        <img class="prod-img" src="/images/products/<%= product.mainImage %>" alt="imagen de producto" width=100px>
                                    </figure>
                                    <h2 class="productName" id="productName"> <%= product.name %></h2>
                                    <section class="product-data">
                                        <div class="product-data-right">
                                            <h3><%= product.price %></h3>
                                            <% if (product.discount_id != null) {%>
                                                <h5 class="discount-tag"><%= product.discount.percentage %>%OFF </h5>
                                                <% } %>
                                        </div>
                                    </section>
                                    <button class="add add-product"> Agregar al carrito </button>
                                </div>

                            </div>
                            <% }) %>


            </div>
            <script>
                const productName = document.getElementById('productName');
                if (productName.textContent.length > 10) {
                productName.classList.add('small');
                }
            </script>

            <%-include('partials/footer') %>
    </body>

    </html>