<!-- HEAD DINAMICO -->
<%-include('partials/head') %>
    <!-- HEADER DINAMICO -->

    <body>
        <%-include('partials/header') %>

            <main class="container">
                <section class="user-container">
                    <div class="top-buttons">
                            <a href="<%= user.id %>/edit" class="action-button edit">Editar</a>
                    </div>

                    <div class="left-column">
                        <% if(user.role_id != 2) { %>
                        <h2>Admin</h2>
                            <% } else { %>
                        <h2>Usuario</h2>  
                        <% } %>    
                        <figure class="user_image">
                            <img class="user-avatar" src="/images/users/<%= user.avatar %>" alt="imagen de usuario" width=100px></figure>

                        <div class="user-info">
                            <h3>Nombre: <%= user.first_name %></h3>
                            <h3>Apellido: <%= user.last_name %></h3>
                            <h3>Email: <%= user.email %></h3>
                        </div>
                        <% if(user.role_id != 2) { %>
                        <a href="/user/all">Ver todos los usuarios...</a>
                        <% } %>
                    </div>

                    <div class="user-content">
                        <h1>
                            No hay compras recientes
                        </h1>
                    </div>
                </section>
            </main>
            <%-include('partials/footer') %>
    </body>

    </html>