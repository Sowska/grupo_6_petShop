<body>
    <%-include('partials/header') %>

<main class="container">
    <section class="container-form">
        <div class="form-card">
            <h3 class="form-card-title">Registrarme</h3>
            <div class="form-card-container">
                <form action="/user" class= "register-form" method="POST">
                    <div class="form-control">
                        <label for="txtName">Nombre</label>
                        <input type="text" name="firstName" required minlength="3">
                    </div>
                    <div class="form-control">
                        <label for="txtLastname">Apellido</label>
                        <input type="text" name="lastName" required minlength="3">
                    </div>
                    <div class="form-control">
                        <label for="txtEmail">Correo electronico</label>
                        <input type="email" name="email" required>
                    </div>
                    <div class="form-control">
                        <label for="txtPass">Contrase√±a</label>
                        <input type="password" name="password" required minlength="6">
                    </div>
                    <div class="action">
                        <button type="submit" class="btn-submit">
                            Finalizar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
<%-include('partials/footer') %>
