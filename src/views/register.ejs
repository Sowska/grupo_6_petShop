<body>
    <%-include('partials/header') %>

<main class="container">
    <section class="container-form">
        <div class="form-card">
            <h3 class="form-card-title">Registrarme</h3>
            <div class="form-card-container">
                <form class="register-form">
                    <div class="form-control">
                        <label for="txtName">Nombre</label>
                        <input type="text" name="txtName" id="txtName" required minlength="5">
                    </div>
                    <div class="form-control">
                        <label for="txtLastname">Apellido</label>
                        <input type="text" name="txtLastname" id="txtLastname" required minlength="4">
                    </div>
                    <div class="form-control">
                        <label for="txtEmail">Correo electronico</label>
                        <input type="email" name="txtEmail" id="txtEmail" required>
                    </div>
                    <div class="form-control">
                        <label for="txtBirthday">Fecha de nacimiento</label>
                        <input type="date" name="txtBirthday" id="txtBirthday" required max="2005-02-06">
                    </div>
                    <div class="form-control">
                        <label for="txtUser">Usuario</label>
                        <input type="text" name="txtUser" id="txtUser" required minlength="4">
                    </div>
                    <div class="form-control">
                        <label for="txtPass">Contrase√±a</label>
                        <input type="password" name="txtPass" id="txtPass" required minlength="4">
                    </div>
                    <div class="action">
                        <button type="submit" class="btn-submit">
                            Finalizar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
<%-include('partials/footer') %>
</body>

</html>
